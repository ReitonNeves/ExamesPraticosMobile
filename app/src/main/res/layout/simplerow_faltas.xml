<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/txtDescricaoFalta"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/btnAddFalta"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:contentDescription="@string/contextDescriptionBtnAdicionarFalta"
        android:onClick="addFalta"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/btnRemoveFalta"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:contentDescription="@string/contentDescriptionRemoveFalta"
        android:onClick="removeFalta"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/txtQuantidadeAtual"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#d6d7d7"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
